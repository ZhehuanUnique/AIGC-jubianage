version: '3.8'

services:
  doubao-rag:
    build: .
    container_name: doubao-rag
    ports:
      - "8001:8001"
    environment:
      - HOST=0.0.0.0
      - PORT=8001
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - CHROMA_PERSIST_DIR=/app/vector_db
    volumes:
      - ./vector_db:/app/vector_db
      - ./uploads:/app/uploads
      - ./frames:/app/frames
      - ./logs:/app/logs
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8001/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s

